cluster_name = "eks-prod"
region = "eu-west-3"

# In prod you will likely provide explicit subnet IDs and VPC id
vpc_id = ""
private_subnet_ids = ["<subnet-0123456789abcdef0>", "<subnet-0fedcba9876543210>"]
public_subnet_ids  = ["<subnet-0aaaabbbbccccdddd>"]

# Node group sizing (more conservative defaults)
node_group_desired_capacity = 3
node_group_min_capacity     = 2
node_group_max_capacity     = 6

# ECR and endpoints
create_ecr = true
create_vpc_endpoints = true

# Provide route tables for S3 gateway endpoint if known
# s3_route_table_ids = ["rtb-0123456789abcdef0"]
